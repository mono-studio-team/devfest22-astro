---
import Button, { Props as ButtonProps } from '~/components/atoms/Button.vue'

type Props = {
  title: string
  paragrah: string
  buttons?: Array<{
    label: string
    url: string
    blank?: boolean
    theme?: ButtonProps['theme']
  }>
}

const { title, paragrah, buttons = [] } = Astro.props

---

<section class="max-w-6xl mx-auto px-4 sm:px-6 py-12 md:py-20">
  <h1 class="text-5xl md:text-[3.50rem] font-bold leading-tighter tracking-tighter mb-4 font-heading text-center">
    {title}
  </h1>
  <p class="text-xl text-gray-600 mb-8 dark:text-slate-400 text-center">
    {paragrah}
  </p>
  {buttons.length > 0 && (
    <div class="flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
      {buttons.map(el => (
        <div class="flex justify-center w-full sm:w-auto">
          <Button href={el.url} tag="a" blank={el.blank} theme={el.theme}>
            {el.label}
          </Button>
        </div>
      ))}
    </div>
  )}

</section>
